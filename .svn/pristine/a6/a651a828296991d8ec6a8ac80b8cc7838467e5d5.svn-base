            result.Columns.Add("促销结束时间", typeof(DateTime));
            result.Columns.Add("图片地址", typeof(string));
            result.Columns.Add(" ", typeof(string));
            int i = 0;
            ////填充DataTable的数据
            foreach (DrugshopTopicDALEntity item in input)
