        /// <summary>
        /// 将实体数组转化为DataTable
        /// 取最先N条
        /// </summary>
        /// <param name="input">数据列表</param>
        /// <param name="TopCount">取最先N条</param>
        /// <returns></returns>
        static public DataTable EntityList2DataTableCn( DrugfactoryNewsDALEntity[] input)
        {
            DataTable result = new DataTable();
            List<DrugfactoryNewsDALEntity> list = new List<DrugfactoryNewsDALEntity>();
            ////将LIST列表的ID变成名字
            foreach (var item in input)
            {
                ////克隆后加入新列表
                DrugfactoryNewsDALEntity entity = item.Clone();
                entity.ArticleTypes=MultiSelectService.GetValue("","ARTICLE_TYPES",item.ArticleTypes.ToStr());
                list.Add(entity);
            }
            ////构建DataTable的列
            result.Columns.Add("文章ID", typeof(string));
            result.Columns.Add("标题", typeof(string));
            result.Columns.Add("内容", typeof(string));
            result.Columns.Add("文章分类", typeof(string));
            result.Columns.Add("权重", typeof(int));
            result.Columns.Add("关键字", typeof(string));
            result.Columns.Add("描述", typeof(string));
            result.Columns.Add(" ", typeof(string));
            int i = 0;
            ////填充DataTable的数据
            foreach (DrugfactoryNewsDALEntity item in input)
            {
                result.Rows.Add(
                item.NewsId,
                item.NewsTitle,
                item.NewsContent,
                item.ArticleTypes,
                item.PowerIndex,
                item.SeoKeywords,
                item.SeoDescription,
                "");
                i++;
            }
            return result;
        }
